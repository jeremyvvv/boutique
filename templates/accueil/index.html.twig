{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}
<style xmlns="http://www.w3.org/1999/html">
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="col-12">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron">
                <div class="text text-center">
                    Bienvenue sur la boutique de gommettes de jay akid
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        {% for i in 1..5 %}
        <div class="col-1">
            <img src="{{ asset('images/gommettes'~i~'.jpg') }}"
                 class="rounded img-fluid " alt="gommettes rondes">
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
