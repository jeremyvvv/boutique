{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}
<style xmlns="http://www.w3.org/1999/html">
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="col-12">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron">
                <div class="text text-center">
                    Bienvenue sur la boutique de fauteuils JayAKid
                </div>
            </div>
        </div>
    </div>
    <div class="row col d-flex justify-content-center">
        {% for p in produits %}
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{ p.image }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ p.libelle }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{ p.tarif }}â‚¬</h6>
                    <p class="card-text">{{ p.description }}</p>
                    <a href="#" class="btn btn-primary ">Cliquer ici ne fera rien du tout</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
