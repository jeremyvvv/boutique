<!DOCTYPE html>
<html>
    <head>
        {% block head_css %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
            <link rel="stylesheet" href="style.css">
        {% endblock %}
        {% block head_js %}
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
        {% endblock %}

        <meta charset="UTF-8">
        <title>{% block title %}Welcome{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    {% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Ma Boutique</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02"
                aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path("accueil") }}">Accueil <span class="sr-only">(current)</span></a>
               </li>
           </ul>
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="{{  path("produit_index") }}">Produits <span class="sr-only">(current)</span></a>
                </li>
            </ul>
            <ul class="navbar-nav mr-right mt-2 mt-lg-0">
                <li class="nav-item">
                    <button class="btn btn-info btn-lg" type="button">
                        <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                        <a href="{{  path("panier_index") }}">
                             Panier {{ app.session.get('total_produit') }}
                        </a>
                    </button>
                </li>
            </ul>
           <form class="form-inline my-2 my-lg-0">
               {% if not is_granted('ROLE_USER') %}
                   <a href="{{ path("app_login") }}" class="btn btn-primary">Se connecter</a>
               {% else %}
                   <a href="{{ path("app_logout") }}" class="btn btn-warning">Se d√©connecter</a>
               {% endif %}
           </form>
       </div>
    </nav>
    {% endblock %}

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
