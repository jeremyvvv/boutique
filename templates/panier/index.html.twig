{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bonjour, voici le panier! âœ…</h1>

    This friendly message is coming from:

    <p>{{ dump(panier) }}</p>
    <p>{{ dump(montant_total) }}</p>
    <p>{{ dump(date_creation) }}</p>
    <p>{{ dump(app.session.get('les_produits')) }}</p>
    <table class="table">
    <thead>
    <tr>
        <th>Produit</th>
        <th>Quantite</th>
        <th>Prix</th>
        <th>actions</th>
    </tr>
    </thead>
    <tbody>
    {% for contenir in contenirs %}

        <tr>
            <td>{{ contenir.idproduit }}</td>
            <td>{{ contenir.quantite }}</td>
            <td></td>
            <td>
                <a href="{{ path('contenir_show', {'id': contenir.id}) }}">show</a>
                <a href="{{ path('contenir_edit', {'id': contenir.id}) }}">edit</a>
            </td>
        </tr>

    {% else %}
        <tr>
            <td colspan="3">no records found</td>
        </tr>
    {% endfor %}

    </tbody>
    </table>
    {% if app.session.get('total_produit') > 0 %}<p><button type="button" class="btn btn-danger"><a href="{{ path('panier_remove') }}">Vider Panier</a></button></p>
    {% endif %}

</div>
{% endblock %}
